<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomActionBarTheme" parent="@Theme.AppCompat">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyNavTab</item>
        <item name="android:actionBarTabBarStyle">@style/MyTabBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyTabText</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:height">45dp</item>
        <item name="android:background">@color/lightblue</item>
        <item name="android:titleTextStyle">@style/MyBarText</item>
    </style>

    <style name="MyNavTab" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_selector</item>  
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">0dp</item> 
    </style>
    
    <style name="MyTabBar"
           parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:background">@drawable/tab_selector</item>
    </style>

    <style name="MyTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="MyBarText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>